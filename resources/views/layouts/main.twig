<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Welcome to Lawyers app!</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://getbootstrap.com/docs/4.0/examples/starter-template/starter-template.css" rel="stylesheet">
</head>
<body data-gr-c-s-loaded="true">
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    {% if auth.check() %}
    <a class="navbar-brand" href="#">Hi, {{auth.user().name }}</a>
    {% endif %}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        {% if auth.check() %}
        <ul class="navbar-nav mr-auto">
            {% if auth.isLawyer() %}
            <li class="nav-item active">
                <a class="nav-link" href="{{ path_for('lawyerAppointments') }}">Appointments<span class="sr-only">(current)</span></a>
            </li>
            {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path_for('listAppointments') }}">Appointments <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ path_for('createAppointment') }}">Add Appointment<span class="sr-only">(current)</span></a>
            </li>
            {% endif %}
        </ul>
        {% endif %}
        <div class="my-2 my-lg-0">
            {% if session.has('auth_user') %}
            <a class="btn btn-outline-success my-2 my-sm-0" href="{{ path_for('logout') }}">Logout</a>
            {% else %}
                <a class="btn btn-outline-success my-2 my-sm-0" href="{{ path_for('login') }}">Login</a>
                <a class="btn btn-outline-success my-2 my-sm-0" href="{{ path_for('registration') }}">Registration</a>
            {% endif %}
        </div>
    </div>
</nav>

{#<div id="content">#}
    <main role="main" class="container">

        <div class="starter-template">
            <h1>Bootstrap starter template</h1>

            {% block body %}{% endblock %}
        </div>

    </main>
{#</div>#}
</body>
</html>
